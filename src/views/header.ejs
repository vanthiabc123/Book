<div class="navbar">
  <a href="#" class="logo"> NEWS </a>
  <ul class="menu">
    <li class="menu-item">
      <a href="/" class="menu-link">Trang Chủ</a>
    </li>
    <li class="menu-item">
      <a href="#" class="menu-link"
        >Tin Tức <i class="fa fa-solid fa-sort-down"></i
      ></a>
      <ul>
        <li>
          <a href="?url=postFeatured.php">Nổi Bật</a>
        </li>
        <% categories.forEach(function(category) { %>
        <li>
          <a href="/category/<%- category.id %>"> <%= category.name %> </a>
        </li>
        <% }); %>
      </ul>
    </li>
  </ul>
  <div class="account">
    <% if (locals.user) { %>
    <div class="account-img">
      <img src="<%= user.avatar ||
      "https://images.unsplash.com/photo-1678303801276-66e244cdd70e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=929&q=80"
      %>" />
      <ul>
        <li>
          <a href="/profile/<%= user._id %>">Thông tin cá nhân</a>
        </li>
        <li>
          <a href="/logout">Đăng Xuất</a>
        </li>
      </ul>
    </div>
    <% } else { %>
    <a class="btn btn-account" href="/login">
      <i class="fa fa-solid fa-user"></i>
    </a>
    <% } %>
  </div>
</div>
