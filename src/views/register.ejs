<main>
  <section class="signup container">
    <div class="signup-main">
      <h3 class="headding">Đăng Ký</h3>
      <form class="form-sign"  onsubmit="return check()" method="POST">
        <div class="text-field">
          <label for="username">Tên Tài Khoản</label>
          <input
            name="username"
            autocomplete="off"
            type="text"
            id="username"
            name="username"
            placeholder="Nhập Tên Tài Khoản"
          />
        </div>
        <div class="text-field">
          <label for="email">Email</label>
          <input
            name="email"
            autocomplete="off"
            type="email"
            id="email"
            name="email"
            placeholder="Nhập email"
          />
          <span class="error"></span>
        </div>
        <div class="text-field">
          <label for="password">Mật Khẩu</label>
          <input
            name="password"
            autocomplete="off"
            type="password"
            id="password"
            name="password"
            placeholder="Nhập Mật Khẩu"
          />
          <span class="error"></span>
        </div>
        <div class="text-field">
          <label for="rpassword">Nhập Lại Mật Khẩu</label>
          <input
            name="rpassword"
            autocomplete="off"
            type="password"
            id="rpassword"
            placeholder="Nhập Lại Mật Khẩu"
          />
          <span class="error"></span>
        </div>
        <div class="text-field">
          <label for="birthday">Ngày Sinh</label>
          <input
            name="birthday"
            autocomplete="off"
            type="date"
            id="birthday"
            name="birthday"
            placeholder="Nhập Ngày Sinh"
          />
          <span class="error"></span>
        </div>
        <label for="gender">Giới Tính</label>
        <select name="gender" id="">
          <option value="1">Nam</option>
          <option value="0">Nữ</option>
        </select>
        <button type="submit">Đăng Ký</button>
      </form>
    </div>
  </section>
</main>
<script>
    function check(){
                var loi;
                var username = document.getElementById("username");
                if (username.value.length == 0) {
                    alert("Bạn chưa nhập họ và tên");
                    username.style.border = "2px solid red";
                    username.style.background = "red";
                    return false;
                } else {
                    username.style.border = "2px solid rgb(16, 233, 0)";
                    username.style.background = "none";
                }
               
                var email = document.getElementById("email");
                if (email.value.length == 0) {
                    alert("Bạn chưa nhập Email");
                    email.style.border = "2px solid red";
                    email.style.background = "red";
                    return false;
                } else {
                    email.style.border = "2px solid rgb(16, 233, 0)";
                    email.style.background = "none";
                }
                var password = document.getElementById("password");
                if (password.value.length == 0) {
                    alert("Bạn chưa nhập password");
                    password.style.border = "2px solid red";
                    password.style.background = "red";
                    return false;
                } else {
                  password.style.border = "2px solid rgb(16, 233, 0)";
                  password.style.background = "none";
                }
              }
</script>
